     &lt;span class="nv"&gt;server_name&lt;/span&gt;  &lt;span class="nv"&gt;honmaple&lt;/span&gt;.&lt;span class="nv"&gt;com&lt;/span&gt;&lt;span class="c1"&gt;;&lt;/span&gt;
     #请更改成你的文件地址
